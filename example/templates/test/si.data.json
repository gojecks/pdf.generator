{
    "textContents": {
        "content": [
            "{{page.title}}",
            "{{page.instruction}}",
            "@bold({{page.break}})"
        ]
    },
    "tableContent": {
        "content": [
            [

                [{ "text": "HelperName", "style": "alignmentAndBoldHeader" }, { "text": "Usuage", "style": "alignmentAndBoldHeader" }],
                ["'@bold'", "@bold(Bold a text)"],
                ["'@underline'", "@underline(underline) text within a sentence"],
                ["'@italics'", "Make a text @italics(italics)"],
                ["'@boldUnderline'", "@boldUnderline(Bold and Underline) text"],
                ["'@boldItalics'", "@boldItalics(Bold and Italics) text"],
                ["'@boldItalicsUnderline'", "@boldItalicsUnderline(Bold Italics and underline) text"],
                ["'@underlineItalics'", "@underlineItalics(Underline and Italic) text"]
            ]
        ]
    },
    "stackContent": {
        "content": [
            [{
                "text": "Hello World"
            }]
        ]

    },
    "header": {
        "text": "{{page.header}} @date(2018-04-09, 12452525)",
        "color": "gray",
        "fontSize": 8,
        "processHelpers": ["@date"],
        "processProp": "text"
    },
    "footer": {
        "content": [{
            "text": "{{page.footer}} : Supports pageNumbering {{currentPage}} / {{pageCount}}",
            "color": "blue",
            "fontSize": 8,
            "alignment": "center"
        }]

    },
    "testLayout": {
        "content": {
            "vLineColor": "#cccccc",
            "hLineColor": "#cccccc",
            "vLineWidth": 0.5,
            "hLineWidth": 0.5,
            "paddingTop": 0,
            "paddingBottom": 0
        },
        "handler": "layoutHandler"
    }
}